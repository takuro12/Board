<section class="login-block">
  <div class="container">
<p id="notice"><%= notice %></p>
<div class="login-sec">
<h2 class="text-center">一覧</h2>

<%if current_user%>
<%=link_to 'My Page',mypage_user_path(current_user.id)%></br>
<%= link_to 'New Book', new_book_path %></br>

  <%end%>
	<div class="row">
		<div class="col-lg-12 col-md-8 col-sm-9 col-xs-12">
		   <% @books.each do |book| %>
		    <article>
		        <div class="row">
		            <div class="col-sm-0 col-md-2">
		                <figure>
		                    <%=image_tag book.user.image.thumb.url%>
		                </figure>
		            </div>
		            <div class="col-sm-12 col-md-10">
		                <span class="label label-default pull-right"><i class="glyphicon glyphicon-comment"></i>50</span>
		               	<h4><%=book.user.name %></h4>
		                <h4></h4> <%=book.country%></h4>
		                <p> <%=book.induction%></p>
		                <section>
		                    <i class="glyphicon glyphicon-folder-open"></i><%= link_to 'Show', book %>
		                    <%if current_user%>
		                    <%if current_user.id==book.user_id%>
		                    <i class="glyphicon glyphicon-user"></i>><%= link_to 'Edit', edit_book_path(book) %>
		                    <i class="glyphicon glyphicon-calendar"></i>><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
		                    <i class="glyphicon glyphicon-eye-open"></i>
		                    <%end%>
		                    <%end%>
		                    <a href="#" class="btn btn-default btn-sm pull-right">More ... </a>
		                </section>
		            </div>
		        </div>
		    </article>
		    <%end%>
		    
		 
		 
		
		    
		   
		</div>
	</div>
</div>
</div>
</section>